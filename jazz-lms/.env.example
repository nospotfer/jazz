# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET="PDFs - Cultura del Jazz"
SIGNED_URL_TTL_SECONDS=900

# Database - Session Pooler (required for IPv6-only Supabase + serverless platforms)
# Get this from Supabase Dashboard -> Settings -> Database -> Connection Pooling -> Session
DATABASE_URL="postgresql://postgres.your-project-ref:[YOUR-PASSWORD]@aws-0-region.pooler.supabase.com:5432/postgres"

# Note: If your Supabase database is IPv6-only (most are), you cannot use direct connection
# from Vercel or most local machines. Use the Session Pooler and run migrations via Supabase SQL Editor.

# Stripe
STRIPE_SECRET_KEY="your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# Mux (signed playback)
MUX_SIGNING_KEY_ID=your_mux_signing_key_id
MUX_SIGNING_PRIVATE_KEY=your_mux_signing_private_key_or_base64_pem

# Admin
ADMIN_OWNER_EMAIL=admin@neurofactory.net
ADMIN_EMAIL=your-admin-email
ADMIN_USER_ID=admin-1

